{
	"buildCommand": "bun run build",
	"functions": {
		"api/index.js": {
			"maxDuration": 30
		}
	},
	"rewrites": [{ "source": "/(.*)", "destination": "/api/index" }],
	"crons": [
		{
			"path": "/api/class-booking/process-abandoned-enrollments",
			"schedule": "*/15 * * * *"
		},
		{
			"path": "/api/follow-ups/trigger-next-messages",
			"schedule": "*/15 * * * *"
		},
		{
			"path": "/api/follow-ups/find-and-trigger-students",
			"schedule": "0 8 * * *"
		},
		{
			"path": "/api/cohorts/create-tomorrow-classes",
			"schedule": "0 12 * * *"
		}
	]
}
